@model Project.Models.Package

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<style>
    .create_setup_form {
        margin-left: 20% !important;
        margin-right: 20% !important;
    }

    .input_group {
        min-width: 400px !important;
    }
</style>

<h1 class="text-center mt-4">Edit Package</h1>
<div class="card shadow create_setup_form">
    <div class="card-body">
        <div class="table-responsive">
            <table class="table-bordered">
                <form asp-action="Edit" asp-controller="Packages" method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="name" class="control-label"></label>
                        <input asp-for="name" class="form-control input_group" />
                        <span asp-validation-for="name" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="duration" class="control-label"></label>
                        <input asp-for="duration" class="form-control input_group" />
                        <span asp-validation-for="duration" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="details" class="control-label"></label>
                        <input asp-for="details" class="form-control input_group" />
                        <span asp-validation-for="details" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="status" class="control-label"></label>
                        <input asp-for="status" class="form-control input_group" />
                        <span asp-validation-for="status" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="price" class="control-label"></label>
                        <input asp-for="price" class="form-control input_group" />
                        <span asp-validation-for="price" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Update" class="btn btn-primary" />
                    </div>
                </form>
            </table>
            <div>
                <a asp-action="Index">Back to List</a>
            </div>
        </div>
    </div>
</div>

@model Project.Models.CustomerCare

@{
    ViewData["Title"] = "Edit";
}

<style>
    .create_setup_form {
        margin-left: 20% !important;
        margin-right: 20% !important;
    }

    .input_group {
        min-width: 400px !important;
    }
</style>

<h1 class="text-center mt-4">Edit Info</h1>
<div class="card shadow create_setup_form">
    <div class="card-body">
        <div class="table-responsive">
            <table class="table-bordered">
                <form asp-action="Edit" asp-controller="CustomerCare" method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                   
                  
                    <div class="form-group">
                        <label>Phone</label>
                        <input type="text" class="form-control input_group" name="phone" value="@Model.Phone"/>
                        <span asp-validation-for="Phone" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Create" class="btn btn-primary" />
                    </div>
                </form>
            </table>
            <div>
                <a asp-action="Index" class="btn btn-info">Back to List</a>
            </div>
        </div>
    </div>
</div>




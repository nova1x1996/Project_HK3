@model Project.Models.CustomerCare

@{
    ViewData["Title"] = "Create";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<style>
    .create_setup_form {
        margin-left: 20% !important;
        margin-right: 20% !important;
    }

    .input_group {
        min-width: 400px !important;
    }
</style>

<h1 class="text-center mt-4">Create Info</h1>
<div class="card shadow create_setup_form">
    <div class="card-body">
        <div class="table-responsive">
            <table class="table-bordered">
                <form asp-action="Create" asp-controller="CustomerCare" method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="location_id" class="control-label">Location</label>
                        <select asp-for="location_id" class="form-control input_group" asp-items="@ViewBag.data">
                            <option>--Selected--</option>
                        </select>
                        <span asp-validation-for="location_id" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label>Phone</label>
                        <input type="text" class="form-control input_group" name="phone" />
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Create" class="btn btn-primary" />
                    </div>
                </form>
            </table>
            <div>
                <a asp-action="Index">Back to List</a>
            </div>
        </div>
    </div>
</div>


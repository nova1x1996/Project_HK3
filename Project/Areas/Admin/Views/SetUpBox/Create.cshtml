@model Project.Models.SetUpBox

@{
    ViewData["Title"] = "Create";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}
<style>
    .create_setup_form{
        margin-left: 15% !important;
        background-color: white;
        box-shadow: 1px 2px 10px;
        width: 880px !important;
        padding: 50px;
        border-radius: 10px;
        margin-bottom: 50px;
        
    }

    .input_group{
        min-width: 770px !important;
    }
</style>

<h1 class="text-center mt-5">Create New Set-Up-Box</h1>

<div class="create_setup_form mt-5">
    <div class="row">
        <div class="col-md-4">
            <form asp-action="Create" method="post" enctype="multipart/form-data" asp-controller="SetUpBox">
                @*<div asp-validation-summary="ModelOnly" class="text-danger"></div>*@
                <div class="form-group">
                    <label asp-for="name" class="control-label"></label>
                    <input asp-for="name" class="form-control input_group" placeholder="Enter name..."/>
                    <span asp-validation-for="name" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="details" class="control-label"></label>
                    <input asp-for="details" class="form-control input_group" placeholder="Enter details..."/>
                    <span asp-validation-for="details" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="img" class="control-label"></label>

                    <input asp-for="img" type="file" name="file" required id="file" onchange="document.getElementById('Image').src = window.URL.createObjectURL(this.files[0])" class="form-control-file input_group" />

                    <span asp-validation-for="img" class="text-danger"></span>
                </div>
                <img src="" id="Image" width="100px" />
                <div class="form-group">
                    <label asp-for="price" class="control-label"></label>
                    <input asp-for="price" class="form-control input_group" placeholder="Enter price..."/>
                    <span asp-validation-for="price" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Create" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>

    <div>
        <a asp-action="Index">Back to List</a>
    </div>
</div>



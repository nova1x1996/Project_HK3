@model Project.Models.SetUpBox

@{
    ViewData["Title"] = "Create";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}
<style>
    .create_setup_form{
        margin-left: 15% !important;
        background-color: white;
        box-shadow: 0 .15rem 1.75rem 0 rgba(58,59,69,.15) !important;
        width: 880px !important;
        padding: 50px;
        border-radius: 10px;
        margin-bottom: 50px;
        
    }

    .input_group{
        min-width: 770px !important;
    }
    .error_msg{
        white-space: nowrap !important;
    }

    .custom-file {
        min-width: 770px !important;
    }
</style>

<h1 class="text-center mt-5">Create New Set-Up-Box</h1>

<div class="create_setup_form mt-5">
    <div class="row">
        <div class="col-md-4">
            <form asp-action="Create" method="post" enctype="multipart/form-data" asp-controller="SetUpBox">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <span class="text-danger">@ViewBag.msg</span>
                  
                </div>
                <div class="form-group">
                    <label asp-for="name" class="control-label"></label>
                    <input asp-for="name" name="name" class="form-control input_group" placeholder="Enter name..."/>
                    <span asp-validation-for="name" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="details" class="control-label"></label>
                    <input asp-for="details" class="form-control input_group" placeholder="Enter details..."/>
                    <span asp-validation-for="details" class="text-danger"></span>
                </div>

                <label asp-for="imgFile" class="control-label"></label>
                <div class="form-group custom-file">
                    <label asp-for="imgFile" class="custom-file-label">Choose file...</label>
                    <input asp-for="imgFile" type="file" id="file" onchange="document.getElementById('Image').src = window.URL.createObjectURL(this.files[0])" class="form-control input_group custom-file-input" />
                    <span asp-validation-for="imgFile" class="text-danger error_msg" id="file_error"></span>
                </div>
                <img src="" id="Image" width="100px" />

                <div class="form-group">
                    <label asp-for="price" class="control-label"></label>
                    <input asp-for="price" class="form-control input_group" placeholder="Enter price..."/>
                    <span asp-validation-for="price" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Create" onclick="return ValidateFile()" class="btn btn-primary" />
                </div>
               
            </form>
        </div>
    </div>

    <div>
        <a asp-action="Index">Back to List</a>
    </div>
</div>
<script src="~/js/ValidateFile.js"></script>
<script>
    // Add the following code if you want the name of the file appear on select
    $(".custom-file-input").on("change", function () {
        var fileName = $(this).val().split("\\").pop();
        $(this).siblings(".custom-file-label").addClass("selected").html(fileName);
    });
</script>

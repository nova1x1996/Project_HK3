@model IEnumerable<Project.Models.DealersOrder>
@{
    ViewData["Title"] = "List Dealer's Order";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<style>
    .card_head {
        display: flex !important;
        justify-content: space-between !important;
    }

    .setup_title {
        font-size: 40px !important;
    }
</style>

<div class="container-fluid">

    <!-- Page Heading -->
    <h1 class="h3 mb-2 text-gray-800 text-center mt-5 mb-4 setup_title">Dealers Order</h1>

    <!-- DataTales Example -->
    <div class="card shadow mb-4">
        <div class="card-header py-3 card_head">
         
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                    <thead>
                        <tr>
                            <th>Dealer</th>
                            <th>SetUpBox</th>
                            <th>Status</th>
                    
                            <th>Action</th>
                        </tr>
                    </thead>
                    <tfoot>
                        <tr>
                            <th>Dealer</th>
                            <th>SetUpBox</th>
                            <th>Status</th>
                         
                            <th>Action</th>
                        </tr>
                    </tfoot>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.GetDealer.ApplicationUser.UserName </td>
                            
                                    <td class="text-danger">@item.GetSetUpBox.name</td>


                                @if (@item.status == true)
                                {
                                    <td> <div class="btn btn-success">Delivered</div></td>
                                }
                                else
                                {
                                    <td><div class="btn btn-info">New</div></td>
                                }
                               

                                @if (@item.status == false)
                                {
                                    <td>
                                        <a class="btn btn-primary" asp-action="Confirm" asp-route-id="@item.id" onclick="return confirm('Are you sure to Confirm?')">Confirm</a>
                                    </td>
                                }
                                else
                                {
                                    <td></td>
                                }
                              
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>

</div>
@section Scripts {
    <script type="text/javascript" src="/AssetAdmin/js/demo/datatables-demo.js"></script>
}
@model IEnumerable<Project.Models.Faq>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<style>
    .card_head {
        display: flex !important;
        justify-content: space-between !important;
    }

    .setup_title {
        font-size: 40px !important;
    }
</style>

<div class="container-fluid">

    <!-- Page Heading -->
    <h1 class="h3 mb-2 text-gray-800 text-center mt-5 mb-4 setup_title">FAQ</h1>

    <!-- DataTales Example -->
    <div class="card shadow mb-4">
        <div class="card-header py-3 card_head">
            
            <a asp-area="Admin" asp-action="Create" asp-controller="FrequentlyAskedQuestions" class="btn btn-primary">Create new Faq</a>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                    <thead>
                        <tr>
                            <th>Question</th>
                            <th>Answer</th>
                            <th>Status</th>
                            <th>Action</th>
                        </tr>
                    </thead>
                    <tfoot>
                        <tr>
                            <th>Question</th>
                            <th>Answer</th>
                            <th>Status</th>
                            <th>Action</th>
                        </tr>
                    </tfoot>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.question</td>
                                <td>@item.answer</td>
                                @if(item.status.Equals("show")){

                                    <td class="text-success">@item.status.ToUpper()</td>
                                    
                                }else if(item.status.Equals("hidden")){
                                    <td class="text-danger">@item.status.ToUpper()</td>
                                }else{
                                    <td>@item.status</td>
                                }


                                <td style="width:300px;">
                                    <a asp-action="Edit" asp-route-id="@item.id" class="btn btn-warning">Update</a> 
                                    <a asp-action="Details" asp-route-id="@item.id" class="btn btn-primary">Details</a> 
                                    <a asp-action="Delete" asp-route-id="@item.id" onclick="return confirm('Are you sure to delete?')" class="btn btn-danger">Delete</a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>

</div>
@section Scripts {
    <script type="text/javascript" src="/AssetAdmin/js/demo/datatables-demo.js"></script>
}
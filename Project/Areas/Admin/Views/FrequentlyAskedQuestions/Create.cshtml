@model Project.Models.Faq

@{
    ViewData["Title"] = "Create";
}

<style>
    .create_setup_form {
        margin-left: 20% !important;
        margin-right: 20% !important;
    }

    .input_group {
        min-width: 400px !important;
    }

    .form-group label {
        font-weight: bold;
    }
</style>

<h1 class="text-center mt-4">Create FAQ</h1>
<div class="card shadow create_setup_form">
    <div class="card-body">
        <div class="table-responsive">
            <table class="table-bordered">
                <form asp-action="Create" asp-controller="FrequentlyAskedQuestions" method="post">
                   
                    <div class="form-group">
                        <label asp-for="question" class="control-label">Question</label>
                        <textarea asp-for="question" class="form-control"></textarea>
                        <span asp-validation-for="question" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="answer" class="control-label">Answer</label>
                        <textarea asp-for="answer" class="form-control"></textarea>
                        <span asp-validation-for="answer" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="status" class="control-label">Status</label>
                        <select class="form-control" asp-for="status" data-val-required="Please select a type" data-val="true">
                            <option value="show">show</option>
                            <option value="hidden">hidden</option>
                        </select>
                        <span asp-validation-for="status" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Create" class="btn btn-primary" />
                    </div>
                </form>
            </table>
            <div>
                <a asp-action="Index" class="btn btn-info">Back to List</a>
            </div>
        </div>
    </div>
</div>

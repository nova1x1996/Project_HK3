@model Project.Models.Feedback;
@{
	int? idCus = ViewBag.cus as int?;
}

<style>
	.star .form-check label{
		margin-right:30px;
		font-size:18px;
		color:#9dc15b;

	transform: translateY(-5px);
	}
	.tieude {
		font-size:18px;
		font-weight:bold;
	}
</style>
<div id="pricing" class="section lb ">

	<div class="section-title text-center mb-2">
		<h3>FeedBack</h3>

	</div>
	<div class="container mb-1">
		<hr class="invis">
		<div class="card shadow ">
			<div class="card-body">
				<div class="table-responsive">
					<div class="form-group">

						<form asp-action="Create" method="post">

							<input type="text" value="@idCus" hidden asp-for="customer_id" />
							<div class="form-group">
								<label class="tieude">Choose Service</label>
								<select class="form-control" asp-for="type" aria-label="Default select example">

									<option value="Package">Package</option>
									<option value="Setup Box">Setup Box</option>
									<option value="Movie Booking<">Movie Booking</option>
								</select>
							</div>
							<div class="form-group star">
								<label class="tieude">Stars </label>

								<div class="form-check">

									@for (int i = 1; i < 5; i++)
									{
										<input class="form-check-input" value="i" type="radio" asp-for="star" id="flexRadioDefault1">
										<label>
											@for (int x = 0; x < i; x++)
											{
												<i class="fa fa-star"></i>
											}
										</label>
									}
									<input class="form-check-input" value="5" type="radio" asp-for="star" id="flexRadioDefault1" checked><label>
										@for (int x = 0; x < 5; x++)
										{
											<i class="fa fa-star"></i>
										}
									</label>

								</div>

							</div>
							<div class="form-group">
								<label class="tieude">Content</label>
								<textarea class="form-control" asp-for="content" rows="3"></textarea>
								<span class="text-danger" asp-validation-for="content"></span>

							</div>


							<button type="submit" class="btn btn-light btn-radius btn-brd grd1">Give</button>
						</form>

					</div>




				</div>
			</div>


		</div><!-- end row -->

	</div><!-- end container -->
</div><!-- end section -->

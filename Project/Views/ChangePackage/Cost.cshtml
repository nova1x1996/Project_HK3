@model Project.Models.Customer
@{
    var pack = ViewBag.pack as Package;
    var aaa = (int)ViewBag.tongTien;
}
<style>
    .err {
        color: red;
    }

    .msg {
        padding: 0px;
    }

    .container {
    max-width: 500px;
}

    .form-check .RadioMonth {
        margin-right: 50px;
    }

    .form-group label {
        font-weight: bold;
    }

    .form-group .form-check label {
        font-weight: 500;
    }

    .shadow {
        box-shadow: 0 .15rem 1.75rem 0 rgba(58,59,69,.15) !important;
    }

    button {
        padding: 14px 20px;
        margin: 8px 0;
        border: none;
        cursor: pointer;
        width: 100%;
    }
    .profile-button {
        background: #212529;
        color: #fff;
        box-shadow: none;
        border: none
    }

        .profile-button:hover {
            background: #9dc15b
        }

        .profile-button:focus {
            background: #212529;
            box-shadow: none
        }

        .profile-button:active {
            background: #212529;
            box-shadow: none
        }

    .form-control:focus {
        box-shadow: none;
        border-color: #9dc15b
    }
    span{
        color:red
    }
</style>
<div id="pricing" class="section lb ">

    <div class="section-title text-center mb-2">
        <h3>Payment Update Package</h3>

    </div>
    <div class="container mb-1">
        <hr class="invis">
        <div class="card shadow ">
            <div class="card-body">
                <div class="table-responsive">
                    <div class="form-group" >

                        <form asp-action="PaymentUpdatePackage" asp-controller="ChangePackage" method="post">
                            <input hidden name="customer_id" value="@Model.id"/>
                            <input hidden name="package_id" value="@pack.id" />

                            <div class="form-group">
                                <label>New Package Name</label><br />
                                <input class="form-control input_group" readonly value="@pack.name"></input>
                               
                            </div>
                            <div class="form-group">
                                <label>Price / Month</label><br />
                                <input class="form-control input_group" readonly value="@pack.price"></input>

                            </div>
                            <div class="form-group">
                                <label>Total Payment</label><br />
                                <input class="form-control input_group" readonly name="tongtien" value="@aaa"></input>

                            </div>
                            <div class="form-group">
                                <label>Payment</label>
                                <div class="form-check d-flex">
                                    <div class="RadioMonth">
                                        <input class="form-check-input" type="radio" checked name="pay_type" value="paypal" id="flexRadioDefault1">

                                        <img src="/img/logo/paypal-ge18babb59_1280.png" style="width:80px;transform: translateY(-5px);" />


                                    </div>
                                    <div class="RadioMonth">

                                        <input class="form-check-input" type="radio" name="pay_type" value="cod" id="flexRadioDefault1">
                                        <label class="form-check-label" for="flexRadioDefault1">
                                            COD
                                        </label>
                                    </div>


                                </div>
                            </div>
                            <button type="submit" class="btn profile-button">Payment</button>
                        </form>

                    </div>




                </div>
            </div>


        </div><!-- end row -->

    </div><!-- end container -->
</div><!-- end section -->


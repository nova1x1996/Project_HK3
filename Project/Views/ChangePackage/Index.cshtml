@model Project.Models.Customer
@{
    var PackageNew = ViewBag.packList as List<Package>;
    int? aaa;

  
}

<style>
    .err {
        color: red;
    }

    .msg {
        padding: 0px;
    }

    .container {
        max-width: 500px;
    }

    input[type=text], input[type=password] {
        width: 100%;
        padding: 12px 20px;
        margin: 8px 0;
        display: inline-block;
        border: 1px solid #ccc;
        box-sizing: border-box;
    }

    .form-check .RadioMonth {
        margin-right: 50px;
    }

    .form-group label {
        font-weight: bold;
    }

    .form-group .form-check label {
        font-weight: 500;
    }

    .shadow {
        box-shadow: 0 .15rem 1.75rem 0 rgba(58,59,69,.15) !important;
    }

    button {
        padding: 14px 20px;
        margin: 8px 0;
        border: none;
        cursor: pointer;
        width: 100%;
    }

    .profile-button {
        background: #212529;
        color: #fff;
        box-shadow: none;
        border: none
    }

        .profile-button:hover {
            background: #9dc15b
        }

        .profile-button:focus {
            background: #212529;
            box-shadow: none
        }

        .profile-button:active {
            background: #212529;
            box-shadow: none
        }

    .form-control:focus {
        box-shadow: none;
        border-color: #9dc15b
    }
    .container{
        max-width:1000px;
    }
    span {
        color: red
    }
</style>
<div id="pricing" class="section lb ">

    <div class="section-title text-center mb-2">
        <h3>Update Package</h3>

    </div>
    <div class="container mb-1">
        <hr class="invis">
        <div class="card shadow ">
            <div class="card-body">
                <div class="table-responsive">
                    <div class="form-group">
                     
                           

                              
                                    <div class="form-group">
                                        <label>Current Package </label>
                                        <div>@Model.package.name</div>

                                    </div>

                                    <div class="form-group">
                                        <label>Current Price </label>

                                        <div>@Model.package.price</div>
                                    </div>

                                    <div class="form-group">
                                        <label>Remaining Months</label>
                                        @{
                                            DateTime? a = Model.date_left;
                                            int tongthang = 0;
                                            DateTime startDate = DateTime.Now;
                                       
                                              DateTime? endDate = Model.date_left;


                                            int remainingMonths = (endDate.Value.Year - startDate.Year) * 12 + endDate.Value.Month - startDate.Month;


                                        }
                                        <div>@remainingMonths </div>
                                    </div>
                            
                               
                                    @if(PackageNew.Count == 0){
                            <div class="p-3 mb-2 bg-info text-white">
                                "You are currently using the highest premium package, so you cannot update it."
</div>
                                    }else
                                    {

                        <form asp-action="Cost" asp-controller="ChangePackage" method="post">
                            <input name="SoThangConLai" value="@remainingMonths" hidden />

                            <div class="form-group">
                                <label>Choose Package </label>
                                <br />
                                <select name="packageNew_id">
                                    @foreach (var item in PackageNew)
                                    {
                                        <option value="@item.id">@item.name - @item.price $/ month</option>
                                    }
                                </select>
                                <button type="submit" class="btn btn-light btn-radius btn-brd grd1">




                                    Cost


                                </button>
                        </form>
                                    }
                               
                                        </div>


                       
                                 
                                  

                                </div>
                              
                            </div>
                     

                    

                    </div>




                </div>
            </div>


        </div><!-- end row -->

    </div><!-- end container -->
</div><!-- end section -->

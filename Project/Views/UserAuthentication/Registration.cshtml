@model Project.Models.DTO.RegistrationModel
@{
}
<style>
    .err {
        color: red;
    }

    .msg {
        padding: 0px;
    }

   

    input[type=text], input[type=password] {
        width: 100%;
        padding: 12px 20px;
        margin: 8px 0;
        display: inline-block;
        border: 1px solid #ccc;
        box-sizing: border-box;
    }

    .form-check .RadioMonth {
        margin-right: 50px;
    }

    .form-group label {
        font-weight: bold;
    }

    .form-group .form-check label {
        font-weight: 500;
    }

    .shadow {
        box-shadow: 0 .15rem 1.75rem 0 rgba(58,59,69,.15) !important;
    }

    button {
        padding: 14px 20px;
        margin: 8px 0;
        border: none;
        cursor: pointer;
       
    }
</style>
<div id="pricing" class="section lb ">

    <div class="section-title text-center mb-2">
        <h3>Registration</h3>

    </div>
    <div class="container mb-1">

        <hr class="invis">

        <div class="card shadow ">
            <div class="card-body">
                <div class="table-responsive">
                    <div class="form-group">

                        <form role="form" asp-controller="UserAuthentication" asp-action="Registration" method="post" class="form-horizontal">
                            <div class="form-group">
                                <label>First Name</label>
                                <input type="text" class="form-control" asp-for="FirstName" />
                                <span class="text-danger" asp-validation-for="FirstName"></span>
                            </div>

                            <div class="form-group">
                                <label>Last Name</label>
                                <input type="text" class="form-control" asp-for="LastName" />
                                <span class="text-danger" asp-validation-for="LastName"></span>
                            </div>

                            <div class="form-group">
                                <label>Email</label>
                                <input type="text" class="form-control" asp-for="Email" />
                                <span class="text-danger" asp-validation-for="Email"></span>

                            </div>
                            <div class="form-group">
                                <label>Card Number</label>
                                <input type="text" class="form-control" name="card_number" />

                            </div>

                            <div class="form-group">
                                <label>Phone</label>
                                <input type="text" class="form-control" name="phone" />

                            </div>
                            <div class="form-group">
                                <label>Address</label>
                                <input type="text" class="form-control" name="address" />
                            </div>


                            <div class="form-group">
                                <label>Username</label>
                                <input type="text" class="form-control" asp-for="Username" />
                                <span class="text-danger" asp-validation-for="Username"></span>

                            </div>

                            <div class="form-group">
                                <label>Password (eg. John@123)</label>
                                <input type="password" class="form-control" asp-for="Password" />
                                <span class="text-danger" asp-validation-for="Password"></span>

                            </div>

                            <div class="form-group">
                                <label>Password confirm</label>
                                <input type="password" class="form-control" asp-for="PasswordConfirm" />
                                <span class="text-danger" asp-validation-for="PasswordConfirm"></span>

                            </div>



                            @if (TempData["msg"] != null)
                            {
                                <div class="form-group">
                                    <span class="text-info">@TempData["msg"]</span>
                                </div>
                            }

                            <button type="submit" class="btn btn-light btn-radius btn-brd grd1">Registration</button>
                            <a class="btn btn-light btn-radius btn-brd grd1" href="/UserAuthentication/Login">Login</a>
                        </form>

                    </div>




                </div>
            </div>


        </div><!-- end row -->

    </div><!-- end container -->
</div><!-- end section -->

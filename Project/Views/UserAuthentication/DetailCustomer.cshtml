@model Project.Models.Customer

@{
}
<style>
    

    .form-control:focus {
        box-shadow: none;
        border-color: #9dc15b
    }

    .profile-button {
        background: #212529;
        color: #fff;
        box-shadow: none;
        border: none
    }

        .profile-button:hover {
            background: #9dc15b
        }

        .profile-button:focus {
            background: #212529;
            box-shadow: none
        }

        .profile-button:active {
            background: #212529;
            box-shadow: none
        }

    .back:hover {
        color: #9dc15b;
        cursor: pointer
    }

    .labels {
        font-size: 11px;
        font-weight:bold
    }

    .add-experience:hover {
        background: #9dc15b;
        color: #fff;
        cursor: pointer;
        border: solid 1px #9dc15b
    }

    button  {
        padding: 14px 20px;
        margin: 8px 0;
        border: none;
        cursor: pointer;
        width: 100%;
    }
    
</style>
      <form asp-controller="UserAuthentication" asp-action="Save" method="post">
<div class="container rounded bg-white mt-5 mb-5">
    <div class="row" id="row">
        <div class="col-md-3 border-right">
            <div class="d-flex flex-column align-items-center text-center p-3 py-5"><img class="rounded-circle mt-5" width="150px" src="https://st3.depositphotos.com/15648834/17930/v/600/depositphotos_179308454-stock-illustration-unknown-person-silhouette-glasses-profile.jpg"><span class="font-weight-bold">@Model.ApplicationUser.FirstName @Model.ApplicationUser.LastName</span><span class="text-black-50">@Model.ApplicationUser.Email</span><span> </span></div>
        </div>
  
        <div class="col-md-5 border-right">
            <div class="p-3 py-5">
                <div class="d-flex justify-content-between align-items-center mb-3">
                    <h4 class="text-right">Profile Settings</h4>
                </div>
                <div class="row mt-2">
                    <div class="col-md-6">
                        <label class="labels">First Name</label>
                        <input type="text" class="form-control" placeholder="First Name" name="firstName" value="@Model.ApplicationUser.FirstName" required>
                        </div>
                    <div class="col-md-6">
                        <label class="labels">Last Name</label
                    ><input type="text" class="form-control" name="lastName" value="@Model.ApplicationUser.LastName" placeholder="Last Name" required>
                    </div>
                </div>
                <div class="row mt-3">
                    <div class="col-md-12">
                        <label class="labels">Mobile Number</label>
                        <input type="number" class="form-control" name="phone" placeholder="enter phone number" value="@Model.phone" required>
                        </div>
                    <div class="col-md-12">
                        <label class="labels">Address</label>
                        <input type="text" class="form-control" name="address" placeholder="enter address " value="@Model.address" required>
                    </div>
                    <div class="col-md-12">
                        <label class="labels">Email</label>
                        <input type="email" class="form-control" name="email" placeholder="enter email " value="@Model.ApplicationUser.Email" required>
                    </div>
                </div>
               
                <div class="mt-5 text-center"><button  class="btn profile-button" type="submit">Save Profile</button></div>
            </div>
        </div>
      
        <div class="col-md-4">
            <div class="p-3 py-5">
                <div class="d-flex justify-content-between  experience"><a href="/UserAuthentication/ChangePassword"><span class="border px-3 p-1 add-experience"><i class="fa fa-plus"></i>&nbsp;Change Password</span></a></div><br>
                <div class="d-flex justify-content-between  experience"><a asp-controller="ChangePackage" asp-action="Index"><span class="border px-3 p-1 add-experience"><i class="fa fa-plus"></i>&nbsp;Change Package</span></a></div><br>
                <div class="d-flex justify-content-between  experience"><a href="/UserAuthentication/HistoryCustomerOrder"><span class="border px-3 p-1 add-experience"><i class="fa fa-plus"></i>&nbsp;History Order</span></a></div><br>
                <div class="d-flex justify-content-between  experience"><a asp-controller="Recharge" asp-action="History"><span class="border px-3 p-1 add-experience"><i class="fa fa-plus"></i>&nbsp;History Recharge</span></a></div><br>
                <div class="d-flex justify-content-between  experience"><a asp-controller="ChangePackage" asp-action="History"><span class="border px-3 p-1 add-experience"><i class="fa fa-plus"></i>&nbsp;History Update Package</span></a></div><br>
                <div class="d-flex justify-content-between  experience"><a asp-controller="Feedback" asp-action="Create"><span class="border px-3 p-1 add-experience"><i class="fa fa-plus"></i>&nbsp;Give Feedback</span></a></div><br>
            
            </div>
        </div>
    </div>
</div>
</div>
</div>

</form>
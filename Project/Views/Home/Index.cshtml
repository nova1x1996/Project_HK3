<section class="page-section movie_section">
    <h1 class="text-center mb-5 movie_title">Featured movies</h1>
    <div class="container">

        <div class="movie_box">
            
            @foreach (var item in Model)
            {

                <div class="col-md-3 col-sm-6 col-xs-12">
                    <div class="icon-wrapper wow fadeIn" data-wow-duration="1s" data-wow-delay="0.2s" style="visibility: visible; animation-duration: 1s; animation-delay: 0.2s; animation-name: fadeIn;">
                        <img style="width:200px;height:200px;border:solid 1px black;margin:10px" src="@item.img" />

                        <h3 class="movie_name" title="@item.name">@item.name</h3>
                        <p>
                            @if (item.content.Length > 20)
                            {
                                item.content = item.content.Substring(0, 70) + "...";

                            }
                            @item.content

                        </p>
                        <div class="d-flex justify-content-between">
                            <p><strong>@item.price $</strong></p>
                           <a class="btn btn-success mt-2" asp-action="MovieOrder" asp-controller="CustomerOrder" asp-route-id="@item.id">Booking </a>

                        </div>



                    </div><!-- end icon-wrapper -->
                </div>

                <!-- end col -->
            }


        </div><!-- end row -->
    </div>

</section>

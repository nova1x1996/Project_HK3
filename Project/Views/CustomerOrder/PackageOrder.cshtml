@model Project.Models.Package
@{

}

<style>

	.row .icon-wrapper {
		margin-bottom: 20px;
	}

	.section .container {
		margin-bottom: 70px;
	}

	.icon-wrapper p {
		padding-left: 0px;
	}

	#overviews {
		padding-bottom: 0px;
	}

	.card .card-body .table-responsive .form-group label {
		font-size: 19px;
		font-weight: bold;
	}

	.card .card-body .table-responsive .form-group p {
		font-size: 19px;
	}

	.form-check .RadioMonth {
		margin-right:30px;
	}
	.form-check .RadioMonth .form-check-input{
		transform: translateY(6px);
	}
</style>
<div class="all-title-box">
	<div class="container text-center">
		<h1>Order</span></h1>
	</div>
</div>

<div id="overviews" class="section lb">
	<div class="container">


		<div class="row">
			<div class="col-md-12">
				<div class="tab-content">
					<div class="tab-pane active fade show" id="tab1">
						<div class="row ">
							<div class="col-md-6 col-sm-6 col-xs-6 text-center">
								<div class="pricing-table pricing-table-highlighted">
									<div class="pricing-table-header grd1">
										<h2>@Model.name</h2>
										<h3>@Model.price$/@Model.duration month</h3>
									</div>

									<div class="pricing-table-space"></div>
									<div class="pricing-table-features">

										<p> <strong>@Model.details</strong></p>

									</div>
								</div>
							</div>
							<div class="col-md-6 col-sm-6 col-xs-6">
								<div class="card shadow ">
									<div class="card-body">
										<div class="table-responsive">
											<h1 style="text-align:center;font-weight:bold">Order Details</h1>
											<hr />
											<form method="post" asp-action="PackageOrder" asp-controller="CustomerOrder">
												<input class="form-check-input" name="id" type="text" hidden value="@Model.id" />
												<div class="form-group">
													<label>Number Of Month</label>
													<div class="form-check d-flex">
														<div class="RadioMonth">
															<input class="form-check-input" checked type="radio" name="month" value="1" id="flexRadioDefault1">
															<p class="form-check-label" for="flexRadioDefault1">
																1 Month
															</p>
														</div>
														<div class="RadioMonth">

															<input class="form-check-input" type="radio" name="month" value="6" id="flexRadioDefault1">
															<p class="form-check-label" for="flexRadioDefault1">
																6 Month
															</p>
														</div>
														<div class="RadioMonth">

															<input class="form-check-input" type="radio" name="month" value="13" id="flexRadioDefault1">
															<p style="color:green;font-weight:500" class="form-check-label " for="flexRadioDefault1">
																12 Month (+ 1 Month)
															</p>
														</div>

													</div>
												</div>

												<button type="submit" class="btn btn-light btn-radius btn-brd grd1">Total</button>

											</form>

											<form method="post" asp-action="PackageOrderKhac" asp-controller="CustomerOrder">
												@if (ViewBag.Month != null)
												{
													var M = ViewBag.Month as int?;
													decimal? tong;
													if (M == 13)
													{
														tong = Model.price * 12;
													}
													else
													{
														tong = Model.price * M;
													}


													<div class="form-group">
														<label>Total Payment :</label>
														<p>@tong $ - @M Month</p>
														<input name="total_money" hidden type="text" value="@tong" />
														<input name="monthPackage" hidden type="text" value="@M">
														<input name="package_id" hidden type="text" value="@Model.id">
													</div>
													<div class="form-group">
														<label>Payment :</label>
														<div class="form-check d-flex">
															<div class="RadioMonth " style="margin-right:30px;">
																<input class="form-check-input" type="radio" checked="" name="pay_type" value="paypal" id="flexRadioDefault1">

																<img src="/img/logo/paypal-ge18babb59_1280.png" style="width:80px;transform: translateY(-5px);">


															</div>
															<div class="RadioMonth">

																<input class="form-check-input" type="radio" name="pay_type" value="COD" id="flexRadioDefault1">
																<p class="form-check-label" for="flexRadioDefault1">
																	COD
																</p>
															</div>


														</div>
													</div>
												}

												<hr />
												@if (ViewBag.Month != null)
												{
													<button type="submit" class="btn btn-light btn-radius btn-brd grd1">Submit</button>
												}


											</form>

										</div>
									</div>

								</div>
							</div>

						</div>
					</div>
				</div><!-- end row -->
			</div><!-- end pane -->


		</div><!-- end container -->
	</div><!-- end section -->
